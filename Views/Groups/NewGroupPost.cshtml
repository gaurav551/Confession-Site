@model GroupPost
<form asp-action="CreateGroupPost" asp-controller="Groups" method="POST"  >
  <div class="form-row">
    <div class="form-group col-md-12">
      <label >Title</label>
      
      <input type="hidden" class="form-control" name="groupId" value="@ViewBag.groupid"  readonly>

      
      <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title">
    </div>
    
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea class="form-control" rows="10" asp-for="Description" placeholder="Enter Post"> </textarea>
  </div>
  
<hr>
  
  <button type="submit" class="btn btn-primary">Create</button>
</form>
@ViewBag.groupid