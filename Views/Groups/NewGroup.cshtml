@model Group
<form asp-action="CreateGroup" asp-controller="Groups" method="POST" enctype="multipart/form-data" >
  <div class="form-row">
    <div class="form-group col-md-6">
      <label >Group Name</label>
      <input type="hidden" class="form-control" asp-for="Id" placeholder="Enter Group Name">
      
      <input type="text" class="form-control" asp-for="GroupName" placeholder="Enter Group Name">
    </div>
    <div class="form-group col-md-6">
      <label > Group Type</label>
      <input type="text" class="form-control" asp-for="GroupType" placeholder="Group Type">
    </div>
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea class="form-control" asp-for="GroupDescription" placeholder="Add a short description about ur group"> </textarea>
  </div>
  <div class="custom-file">
  <input type="file" class="custom-file-input" name="pic" accept="image/*">
  <label class="custom-file-label" >Choose a Photo or ur group</label>
</div>
<hr>
  
  <button type="submit" class="btn btn-primary">Create</button>
</form>