
@{   
    ViewBag.Title = "www.compilemode.com";   
}   
<script src="/lib/jquery/dist/jquery.min.js"></script>   
<script>   
    $(document).ready(function () {   
        $("#btnSave").click(function () {   
            $.ajax(   
            {   
                type: "POST", //HTTP POST Method   
                url: "/Profile/AddEmployee", // Controller/View    
                data: { //Passing data   
                    Name: $("#txtName").val(), //Reading text box values using Jquery    
                    City: $("#txtAddress").val(),   
                    Address: $("#txtCity").val()  
                    Name.Clear;
                     
                }   
   
            });   
   
        });   
    });   
   
</script>   
<br /><br />   
<fieldset>   
    <div class="form-horizontal">   
        <div class="editor-label">   
            Name   
        </div>   
        <div class="editor-label">   
            <input type="text" name="txtName1"  id="txtName" />   
        </div>   
   
        <div class="editor-label">   
            Address   
        </div>   
        <div class="editor-label">   
            <input type="text" name="txtAddress1"  id="txtAddress" />   
        </div>   
   
        <div class="editor-label">   
            City   
        </div>   
        <div class="editor-label">   
            <input type="text" name="txtCity1"  id="txtCity" />   
        </div>   
        <div class="editor-label">   
            <br />   
            <input class="btn-default" type="button" id="btnSave" value="Save" />   
        </div>   
    </div>   
</fieldset> 