@model QForum
<form asp-action="AskQuestion" asp-controller="Forum" method="POST"  >
     <input type="hidden" class="form-control" asp-for="Id">
  <div class="form-row">
    <div class="form-group col-md-12">
      <label> <b>Your Question</b></label>
     
      
      <input type="text" class="form-control" asp-for="Question"  placeholder="Whats your question"/> 
    </div>
    <div class="form-group col-md-12">
      <label > <b>Describe Your Question</b>  </label>
     
      
      <textarea type="text" class="form-control" asp-for="Description" rows="5"  placeholder="Describe your problem "> </textarea> 
    </div>
   
  </div>
  
    
    <div>
      
      <label > <b>Tags</b>  </label>
      <input type="text" class="form-control" asp-for="Tags"  placeholder="Example C#">
    </div>
  </div>
  
   

   
  
  
<hr>
  
  <button type="submit" class="btn btn-primary">Create</button>
</form>